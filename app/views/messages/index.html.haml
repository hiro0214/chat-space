%html
  %head
  %body
    .contents
      .side
        %p.side_name
          =current_user.name
        =link_to new_group_path, class: "side_icon1" do
          =fa_icon "pencil-square-o"
        =link_to edit_user_path(current_user), method: :get, class: "side_icon2" do
          =fa_icon "cog" 
        .side_groups
          - current_user.groups.each do |group|
            .group
              = link_to group_messages_path(group) do
                .group__name
                  = group.name
                .group__message
                  = group.show_last_message

      .main
        .main_header
          .header 
            %p.header_current 現在のグループ
            %p.header_member Member : ユーザー
          =link_to "Edit", "http://google.com", class: "edit"

        .message
          = render @messages

        .form
          .form_list
            = form_for [@group, @message] do |f|
              = f.text_field :content, class: 'form_message', placeholder: 'type a message'
              .form_icons
                = f.label :image, class: '' do
                  = fa_icon 'picture-o', class: "form_icon"
                  = f.file_field :image, class: "form_image"
              = f.submit "Send" ,class: 'form_send'
